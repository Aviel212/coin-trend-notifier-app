<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cointrendnotifier.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.StartScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.preferences.PreferencesActivity" />
        <activity android:name=".ui.preferences.AddPreferenceActivity"></activity>
        <activity android:name=".ui.accountsettings.AccountSettingsActivity" />
        <activity android:name=".ui.password.PasswordActivity" />
        <activity android:name=".ui.trend.TrendActivity" />
        <activity android:name=".ui.login.SignupActivity" />
        <activity android:name=".ui.about.AboutActivity" />
        <activity android:name=".ui.trends.TrendsActivity" />
        <activity android:name=".ui.login.MainActivity">

        </activity>
    </application>

</manifest>